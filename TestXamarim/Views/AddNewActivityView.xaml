<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="TestXamarim.Views.AddNewActivityView">
	<ContentPage.Content>
		<StackLayout Padding="20">
			<StackLayout Padding="0">
				<Label Text="Date"></Label>
				<DatePicker Date="{Binding Date}"></DatePicker>
			</StackLayout>

			<StackLayout Padding="0">
				<Label Text="Activity"></Label>
				<Editor Text="{Binding Description}" Keyboard="Text"></Editor>
			</StackLayout>

			<StackLayout Padding="0">
				<Label Text="Status"></Label>
				<Picker Title="Status" x:Name="ActivityStatusPicker" VerticalOptions="CenterAndExpand" SelectedIndex="{Binding Path=ActivityStatusSelectedIndex}" >
				</Picker>
			</StackLayout>

			<StackLayout Padding="0">
					<Button Text="Save" Command="{Binding SaveCommand}" BackgroundColor="#5BBB5B" TextColor="White"></Button>
					<Button Text="Cancel"  Command="{Binding CancelCommand}" BackgroundColor="#F5F5F5" TextColor="Black"></Button>
			</StackLayout>

		</StackLayout>
	</ContentPage.Content>
</ContentPage>
